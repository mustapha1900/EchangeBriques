
<h2>Proposition pour " {{nom_echange}} "</h2>
<div id="container">
    <div id="proposition-info">
        <ul>
            <li><strong>Nom de l'échange :</strong> {{nom_echange}}</li>
            <li><strong>Proposé par :</strong> {{nomProposeur}} {{prenomProposeur}}</li>
            <li><strong>Valeur de la proposition :</strong> {{valeurProposition}} $</li>
        </ul>
    </div>
    
    <div id="details-proposition">
        <h3>Contenu de la Proposition</h3>
        <table id="details-proposition-table">
            <thead>
                <tr>
                    <th scope="col">Brique</th>
                    <th scope="col">Quantité</th>
                    <th scope="col">Valeur</th>
                </tr>
            </thead>
            <tbody>
                {{#each propositionBriques}}
                <tr>
                    <td>{{this.nom_brique}} <img src="../assets/{{this.image_brique}}" alt="{{this.nom_brique}}" style="width:50px;height:50px;"></td>
                    <td>{{this.quantite}}</td>
                    <td>{{this.valeur_brique}} $</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
